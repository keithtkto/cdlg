.u-bold
    font-weight: 500

.u-tt5050
    transform: translate(-50%,-50%)
    left: 50%
    top: 50%
    position: absolute

.u-p
    cursor: pointer

.arrows
    color: white
    cursor: pointer
    margin: auto 25px
    font-size: 50px
    font-weight: 100
    

.hamburger
    width:30px
    display: inline-block
    vertical-align: middle
    height: 3px
    top: -2px
    position: relative
    margin-bottom: 20px
    -webkit-transition: .4s cubic-bezier(.77,0,.175,1)
    transition: .4s cubic-bezier(.77,0,.175,1)
    -webkit-transform: rotateZ(0)
    transform: rotateZ(0)
    background: #1D1D1F

.hamburger:before, .hamburger:after
    width: 30px
    content: ''
    display: block
    height: 3px
    left: -2
    position: absolute
    background: #1D1D1F
    -webkit-transition: .4s cubic-bezier(.77,0,.175,1)
    transition: .4s cubic-bezier(.77,0,.175,1)
    -webkit-transition-delay: .1s
    transition-delay: .1s
    top: 8px
    -webkit-transform: rotateZ(0)
    transform: rotateZ(0)

.hamburger:after
    top: 16px
    -webkit-transform: rotateZ(0)
    transform: rotateZ(0)
    -webkit-transition-delay: .2s
    transition-delay: .2s

.hamburger-wrapper
    display: block
    position: fixed
    top: 5px
    right: 10px
    padding: 10px 0
    cursor: pointer
    z-index: 11

.burger-hide, .burger-hide:before, .burger-hide:after
    width: 0px

.collapse-nav
    position: fixed
    left: 0
    z-index: 10
    background: white
    width: 100%
    transition: transform 0.6s cubic-bezier(.77,0,.175,1)
    transition: -webkit-transform 0.4s cubic-bezier(.77,0,.175,1)

.nav-transition-delay
    transition: transform 0.6s cubic-bezier(.77,0,.175,1)
    transition: -webkit-transform 0.4s cubic-bezier(.77,0,.175,1)
    transition-delay: 0.15s

.nav-up
    transform: translateY(-70px)
.nav-down
    transform: translateY(0px)

.collapse-nav div ul 
    padding: 12px 0
    margin: 0
    


